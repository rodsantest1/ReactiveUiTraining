<rxui:ReactiveWindow 
        xmlns:rxui="http://reactiveui.net"
        x:Class="WpfApp1.MainWindow"
        x:TypeArguments="vm:MainViewModel"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ClassLibrary1.ViewModels;assembly=ClassLibrary1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="BtnSave" Content="Save" Width="125" />
            <TextBlock x:Name="Spinner" Text="Loading..." Margin="50" Visibility="Hidden" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</rxui:ReactiveWindow>
